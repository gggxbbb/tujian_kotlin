<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/content_detail">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:id="@+id/info">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pic_title"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textIsSelectable="true"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pic_info"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textIsSelectable="true"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pic_content"
                    android:autoLink="all"
                    android:textColor="@android:color/white"
                    android:textColorLink="@color/design_default_color_primary"
                    android:textSize="14sp"
                    android:textIsSelectable="true"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin">

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                <LinearLayout
                        android:id="@+id/show_archive"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_archive_black_24dp"
                            android:contentDescription="@string/title_archive"
                            android:baselineAlignBottom="false"/>

                    <TextView
                            android:text="@string/title_archive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/show_setWallpaper"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_wallpaper_black_24dp"
                            android:contentDescription="@string/action_set"/>

                    <TextView
                            android:text="@string/action_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/show_download"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_file_download_black_24dp"
                            android:contentDescription="@string/action_download"/>

                    <TextView
                            android:text="@string/action_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables"
                        android:id="@+id/show_copy_link">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_insert_link_black_24dp"
                            android:contentDescription="@string/title_archive"
                            android:baselineAlignBottom="false"/>

                    <TextView
                            android:text="@string/title_copy_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables"
                        android:id="@+id/show_browser">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_open_in_browser_black_24dp"
                            android:contentDescription="@string/title_archive"
                            android:baselineAlignBottom="false"/>

                    <TextView
                            android:text="@string/title_open_in_browser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </androidx.cardview.widget.CardView>
</LinearLayout>